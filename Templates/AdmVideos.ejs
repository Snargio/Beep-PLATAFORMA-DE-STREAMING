        <% for(let i= 0; i < videos.length; i++) { %>
          <div class="card">
        <div id='<%=videos[i]._id%>'>

    <form method="post" action="/?_method=DELETE">

      <h4> <%=videos[i].Title%></h4>

      <iframe width="500" height="280" src="<%=videos[i].URl%>"  title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

      <div id="descPadron" class="card-text">Descrição: <%=videos[i].Description%></div>

      <div><p>Tags: <%=videos[i].Tag%> </p></div>

      <input name="id" value="<%=videos[i]._id%>" hidden>

    </div>

    <a class="" href="/edit/<%=videos[i]._id%>">Editar</a>

    <button class="" type="submit">Delete</button>

       </article>
       </form>
      </div>  
