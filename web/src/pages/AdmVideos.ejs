<body>
    
  <div class="containerHeader">
    <a class="Logo" src="https://beepdigital.com.br/"><img class="Logo" src="https://beepdigital.com.br/_next/image/?url=%2Fimg%2Ficons%2Flogo_white.svg&w=640&q=75" alt=""></a>
    <a href="/add" class="linkAdd" ><h2>Adicionar vídeo</h2></a>
    <a href="/user/logout" class="nav-link"><h2>Sair</h2></a>
</div>

    <main>   



    <br><br>

    
       

      <div class="cardBorder">
      
        <% for(let i= 0; i < videos.length; i++) { %>

          <div class="card">

        <div id='<%=videos[i]._id%>'>

    <form method="post" action="/?_method=DELETE">

      <h4> <%=videos[i].Title%></h4>

      <iframe  src="<%=videos[i].URl%>"  title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

      <div id="descPadron" class="card-text">Descrição: <%=videos[i].Description%></div>

      <div><p>Tags: <%=videos[i].Tag%> </p></div>

      <input name="id" value="<%=videos[i]._id%>" hidden>

    </div>

    <a class="butedit" href="/edit/<%=videos[i]._id%>">Editar</a>

    <button class="butdelet" type="submit">Delete</button>

       </article>
       </form>
      </div>  
      <% } %> 
    </div>


</main>






